<rml>
    <head>
        <title>MailMessage</title>
        <link type="text/template" href="Base/BasePopup.rml" />
        <link type="text/rcss" href="Base/WindowTitle.rcss" />
        <link type="text/rcss" href="MailMessage.rcss" />
    </head>
    <body template="BasePopup" class="show-scrollbar wondow-content-full wondow-content-horizontal">
        <div data-model="MailMessageModel" id="mailmessage-popup" class="font-content">
            <div>
                <div id="window-title">
					<div class="title-icon" data-style-decorator="'itemidimage(' + MailMessageModel.Icon +')'"/>
                    <div class="title-text font-title label" data-rml="ToRMLText(Localize(MailMessageModel.Title))">
					</div>
                </div>
                <div class="top-padding" data-rml="Localize(MailMessageModel.Descr)|ToRMLText">
				</div>
				<div class="top-padding rewards-panel" data-class-hidden="MailMessageModel.Reward.size == 0">
					<div data-for="reward : MailMessageModel.Reward">
						<div data-attr-reward_index="it_index" class="reward-button" onclick="OnEvent(event, 'mailbox.OnReward')">
							<span class="image" data-style-decorator="'itemidimage('+reward.ItemId+')'"/>
							<span class="label">{{reward.Count}}</span>
						</div>
					</div>
				</div>
				<div class="top-padding buttons-panel" >
					<div onclick="OnEvent(event, 'mailbox.OnBack')" class="button button-light-default-color">
						<span class="label">Back</span>
					</div>
					<div onclick="OnEvent(event, 'mailbox.OnClaim')" class="button button-green-color" data-class-hidden="MailMessageModel.Status > 0">
						<span class="label">Claim</span>
					</div>
				</div>
            </div>
        </div>
    </body>
</rml>