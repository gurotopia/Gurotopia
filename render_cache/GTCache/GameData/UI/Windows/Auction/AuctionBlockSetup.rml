<rml>
    <head>
        <title>AuctionBlock</title>
        <link type="text/template" href="../Base/BasePopup.rml" />
        <link type="text/rcss" href="../Base/WindowTitle.rcss" />
        <link type="text/rcss" href="AuctionBlockSetup.rcss" />
    </head>
    <body template="BasePopup" class="show-scrollbar wondow-content-full wondow-content-horizontal">
		<div data-model="AuctionBlockModel" id="auctionblock-popup" class="font-content">
			<div class="font-contentnormal">
				<div class="top-panel">
					<div id="window-title">
						<div class="title-icon" data-style-decorator="'itemidimage(' + AuctionBlockModel.Icon +')'"/>
						<div class="title-text font-title label">
							Auction Block
						</div>
					</div>
				</div>
				<div class="font-contentnormal color_dreamsicle">
					<div data-rml="ToRMLText(Localize('[AUC_BLOCK_SETUP_DESCRIPTION]'))"/>
				</div>
				<table class="top-padding content-table color_dreamsicle" data-class-hidden="!AuctionBlockModel.EnableSetup">
					<colgroup>
						<col style="width:220dp;"/>
						<col/>
					</colgroup>
					<tbody>
						<tr>
							<td class="row-bg">
								<div>Set Item</div>
							</td>
							<td class="row-bg">
								<div class="vertical-panel">
									<div class="item-button" data-style-decorator="'itemidimage('+AuctionBlockModel.ItemId+')'" onclick="OnEvent(event, 'auction.OnItem')"/>
									<div class="font-itemname" data-rml="ItemName(AuctionBlockModel.ItemId)"></div>
									<div class="font-contentnormal color_crazy_red">{{AuctionBlockModel.ErrorMsg}}</div>
								</div>
							</td>
						</tr>
						<tr>
							<td class="vcenter row-bg">Set Duration</td>
							<td class="row-bg">
								<form class="horizontal-panel" name="duration" data-value="AuctionBlockModel.DurationHours">
									<div data-for="duration : AuctionBlockModel.PossibleDurations">
										<div class="radio-container">
											<input type="radio" data-value="duration" data-checked="AuctionBlockModel.DurationHours"/>
											<span class="label">{{duration}} Hr</span>
										</div>
									</div>
								</form>
							</td>
						</tr>
						<tr>
							<td class="vcenter row-bg">Set Start Price (WL)</td>
							<td class="row-bg">
								<div class="horizontal-panel">
									<input class="input" type="text" maxlength="7" data-value="AuctionBlockModel.StartingPrice"/>
									<div class="item-small" data-style-decorator="'itemidimage(242)'"/>
								</div>
							</td>
						</tr>
					</tbody>
				</table>
				<div class="font-contentnormal color_yellow" data-class-hidden="AuctionBlockModel.EnableSetup">
					<div data-rml="ToRMLText(Localize('[AUC_BLOCK_NON_OWNER_SETUP]'))"/>
				</div>
				<div data-class-hidden="!AuctionBlockModel.EnableSetup">
					<div class="font-contentnormal color_yellow" data-class-hidden="AuctionBlockModel.ItemId > 0 && AuctionBlockModel.StartingPrice > 0">
						<div data-rml="ToRMLText(Localize('[AUC_BLOCK_SETUP_INCOMPLETE]'))"/>
					</div>
				</div>
				<div class="top-padding hcenter" data-class-hidden="!AuctionBlockModel.EnableSetup">
					<div class="button button-green-color" onclick="OnEvent(event, 'auction.OnStart')" data-class-disabled="AuctionBlockModel.ItemId <= 0 || AuctionBlockModel.StartingPrice <= 0">
						<span class="label">Start Auction</span>
					</div>
				</div>
			</div>
		</div>
    </body>
</rml>